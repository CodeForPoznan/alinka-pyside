{% extends "template_parts/base_document.xml" %}
{% block body %}
{% include "template_parts/signature_city_date.xml" %}
    <w:p>
      <w:pPr>
        <w:pStyle w:val="Title-uppercase"/>
      </w:pPr>
      <w:r>
        <w:t>OPINIA NR {{ decision_no }}</w:t>
      </w:r>
    </w:p>
    <w:p>
      <w:pPr>
        <w:pStyle w:val="Title-lowercase"/>
      </w:pPr>
      <w:r>
        <w:t>o potrzebie wczesnego wspomagania rozwoju dziecka</w:t>
      </w:r>
    </w:p>
    <w:p>
      <w:pPr>
        <w:pStyle w:val="LegalBasis"/>
      </w:pPr>
      <w:r>
        <w:t>Działając na podstawie art. 127 ust. 10 ustawy z dnia 14 grudnia 2016 r. – Prawo oświatowe (Dz. U. z 2017 r. poz. 59 i 949)</w:t>
      </w:r>
    </w:p>
    {% include "template_parts/on_request.xml" %}
    {% include "template_parts/supporting_center.xml" %}
    {% include "template_parts/meeting.xml" %}
    <w:p>
      <w:pPr>
        <w:pStyle w:val="sentence"/>
      </w:pPr>
      <w:r>
        <w:t>stwierdza potrzebę wczesnego wspomagania rozwoju dziecka</w:t>
      </w:r>
    </w:p>
    {% include "template_parts/child_name.xml" %}
    {% include "template_parts/child_birth.xml" %}
    {% include "template_parts/pesel.xml" %}
    {% include "template_parts/child_address.xml" %}
    <w:p>
      <w:pPr>
        <w:pStyle w:val="SubtitledRun"/>
      </w:pPr>
      <w:r>
        <w:t>{{ parent_descriptions }}</w:t>
      </w:r>
    </w:p>
    <w:p>
      <w:pPr>
        <w:pStyle w:val="Subtitle1"/>
      </w:pPr>
      <w:r>
        <w:t>(imiona i nazwiska rodziców</w:t>
      </w:r>
      <w:r>
        <w:rPr>
          <w:rStyle w:val="Odwoanieprzypisudolnego"/>
        </w:rPr>
        <w:footnoteReference w:id="1"/>
      </w:r>
      <w:r>
        <w:t xml:space="preserve"> oraz adres ich zamieszkania)</w:t>
      </w:r>
    </w:p>
    <w:p>
      <w:pPr>
        <w:pStyle w:val="time-span"/>
      </w:pPr>
      <w:r>
        <w:t>na okres</w:t>
      </w:r>
      <w:r>
        <w:rPr>
          <w:rStyle w:val="Odwoanieprzypisudolnego"/>
        </w:rPr>
        <w:footnoteReference w:id="2"/>
      </w:r>
      <w:r>
        <w:t xml:space="preserve"> {{ period }}</w:t>
      </w:r>
    </w:p>
    <w:p>
      <w:pPr>
        <w:pStyle w:val="Reason-list"/>
        <w:numPr>
          <w:ilvl w:val="0"/>
          <w:numId w:val="0"/>
        </w:numPr>
        <w:ind w:left="360" w:hanging="360"/>
      </w:pPr>
      <w:r>
        <w:t>ze względu na wykrytą niepełnosprawność.</w:t>
      </w:r>
    </w:p>
    <w:p>
      <w:pPr>
        <w:rPr>
          <w:rFonts w:ascii="Times New Roman" w:hAnsi="Times New Roman" w:cs="Times New Roman"/>
          <w:lang w:val="pl-PL"/>
        </w:rPr>
      </w:pPr>
      <w:r>
        <w:br w:type="page"/>
      </w:r>
    </w:p>
    {% with diagnosis_header="Zespół Orzekający przedstawia diagnozę poziomu funkcjonowania dziecka, w tym informację o potencjale rozwojowym i mocnych stronach dziecka oraz występujących w środowisku barierach i ograniczeniach utrudniających jego funkcjonowanie:" %}"
      {% include "template_parts/diagnosis.xml" %}
    {% endwith %}
    {% include "template_parts/recommendations_header.xml" %}
    {% with recommendation="(należy określić zalecane warunki i formy wsparcia umożliwiające realizację indywidualnych potrzeb rozwojowych dziecka, z uwzględnieniem możliwości psychofizycznych oraz potencjału rozwojowego dziecka, w tym sprzyjające wzmacnianiu jego aktywności i uczestnictwa w życiu społecznym, wraz z uzasadnieniem)" %}
      {% include "template_parts/recommendation.xml" %}
    {% endwith %}
    {% with recommendation="(należy określić zalecane cele rozwojowe i terapeutyczne do realizacji podczas zajęć w ramach wczesnego wspomagania rozwoju dziecka oraz w ramach pomocy i wsparcia udzielanych dziecku i rodzinie, w szczególności pomocy psychologiczno-pedagogicznej, wraz ze wskazaniem form tej pomocy, wraz z uzasadnieniem)" %}
      {% include "template_parts/recommendation.xml" %}
    {% endwith %}
    {% with recommendation="(należy określić zalecane sposoby oceny efektów działań podjętych w celu realizacji zaleceń, o których mowa w pkt 1 i 2)" %}
      {% include "template_parts/recommendation.xml" %}
    {% endwith %}
    {% include "template_parts/aac_information.xml" %}
    <w:p>
      <w:pPr>
        <w:pStyle w:val="newdocumentreason"/>
      </w:pPr>
      <w:r>
        <w:t>W przypadku wydania nowej opinii o potrzebie wczesnego wspomagania rozwoju dziecka należy wskazać okoliczności, które Zespół Orzekający uznał za istotne dla rozstrzygnięcia, oraz wyjaśnić powody, na podstawie których stwierdzono potrzebę wydania nowej opinii</w:t>
      </w:r>
      <w:r>
        <w:rPr>
          <w:rStyle w:val="Odwoanieprzypisudolnego"/>
        </w:rPr>
        <w:footnoteReference w:id="3"/>
      </w:r>
      <w:r>
        <w:t>:</w:t>
      </w:r>
    </w:p>
    <w:p>
      <w:pPr>
        <w:rPr>
          <w:rFonts w:ascii="Times New Roman" w:hAnsi="Times New Roman" w:cs="Times New Roman"/>
          <w:lang w:val="pl-PL"/>
        </w:rPr>
      </w:pPr>
      <w:r>
        <w:rPr>
          <w:rFonts w:ascii="Times New Roman" w:hAnsi="Times New Roman" w:cs="Times New Roman"/>
          <w:lang w:val="pl-PL"/>
        </w:rPr>
        <w:t>OKOLICZNOSC</w:t>
      </w:r>
    </w:p>
    <w:p>
      <w:pPr>
        <w:pStyle w:val="Revocation"/>
      </w:pPr>
      <w:r>
        <w:t>Opinia uchyla opinię nr ......o potrzebie wczesnego wspomagania rozwoju dziecka z dnia ............ wydaną przez .............</w:t>
      </w:r>
      <w:r>
        <w:rPr>
          <w:rStyle w:val="Odwoanieprzypisudolnego"/>
        </w:rPr>
        <w:footnoteReference w:id="4"/>
      </w:r>
    </w:p>
  {% include "template_parts/director_signature.xml" %}
  {% include "template_parts/recipients.xml" %}
{% endblock %}
